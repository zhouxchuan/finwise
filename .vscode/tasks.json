{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PySide6 Designer",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pyside6-designer.exe",
            "args": ["${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "PySide6 UIC Compiler",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pyside6-uic.exe",
            "args": ["${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}_ui.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}